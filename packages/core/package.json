{
  "name": "@scaffold/core",
  "version": "0.1.0",
  "description": "Security-first MCP framework with stable public API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240512.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "preact": "^10.0.0",
    "esbuild": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "preact": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "cloudflare",
    "workers",
    "framework"
  ],
  "license": "MIT"
}
